<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhanSuActivity"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svNhanSu"
        android:queryHint="find employee"
        android:iconifiedByDefault="false"
        android:layout_marginBottom="10dp"/>

    <Button
        android:background="@drawable/custom_button_add1"
        app:backgroundTint="@null"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new employee"
        android:id="@+id/btnAddNs"
        android:layout_marginBottom="20dp"/>

    <ListView
        android:id="@+id/lvNhanSu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>